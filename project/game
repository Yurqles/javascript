canvas{
    border:15px solid gray;
}








Javascript
//Setup Canvas and Graphics Context
let cnv = document.getElementById("myCanvas");
let ctx = cnv.getContext("2d"); 
cnv.width = 1200;
cnv.height = 820;

//Global Variables
let player = {
    x: 10, 
    y: 645,
    w: 50,
    h: 75,
    speed_x: 10,// move xSpeed
    speed_y : 25,//move ySpeed 
    xSpeed: 0,//move x
    ySpeed: 0,//move y
    jumping: false, //tell gravity to start
    right: false, //stop repeated movement
    left: false, //stop repeated movement
    
};


let arrowRightPressed = false;
let arrowLeftPressed = false;
let arrowUpPressed = false;



requestAnimationFrame(draw)

function draw() { 

    //Logic
    if (arrowRightPressed && player.right == false){
        player.x += player.speed_x;
        player.right = true;
    } else if (arrowLeftPressed && player.left == false) {
        player.x += player.speed_x;
        player.left = true;
    } else if (arrowUpPressed && player.jumping == false) {
        player.y += -player.speed_y;
        player.jumping = true;
    }

    //Landing
    if (player.y > 644) {
        player.y += -18;
    }

    // So my player doesn't leave page
    if (player.x < 0) {
        player.x = 1199;
    } else if (player.x > 1199) {// if player goes past right boundary
        player.x = 0;
    }

    //Gravity
    if (player.y < 644){
    player.y += 18;
    }

    //Clearing the page
    ctx.clearRect(0, 0, cnv.width, cnv.height);

    //Background
    let background = document.getElementById('background');
    ctx.drawImage(background, 0, 0, 1400, 1000);
    
    //Ground
    ctx.fillStyle = '#684027';
    ctx.fillRect(0, 726, 1250, 100);

    //Ground grass
    ctx.fillStyle = "green";
    ctx.fillRect(0, 720, 1250, 20);

    //Moving player by xSpeed and ySpeed
    player.x += player.xSpeed;
    player.y += player.ySpeed;

    //Player
    let player1 = document.getElementById("player1");
    ctx.drawImage(player1, player.x, player.y, player.w, player.h);

    requestAnimationFrame(draw)
}

//Key Event Stuff
document.addEventListener("keydown", keydownHandler);
document.addEventListener("keyup", keyupHandler);

function keydownHandler(){
        if (event.code == "ArrowRight" || event.code == "KeyD"){
            player.xSpeed += player.speed_x;
        } else if (event.code == "ArrowLeft" || event.code == "KeyA"){
            player.xSpeed += -player.speed_x;
        }  else if (event.code == "ArrowUp" || event.code == "KeyW" || event.code == "Space"){
            player.ySpeed += -player.speed_y;
        }
    }


function keyupHandler(){
    if (event.code == "ArrowRight" || event.code == "KeyD" && player.xSpeed > 0){
       player.xSpeed = 0;
    } else if (event.code == "ArrowLeft" || event.code == "KeyA" && player.xSpeed < 0){
       player.xSpeed = 0;
   }  else if (event.code == "ArrowUp" || event.code == "KeyW" || event.code == "Space" && player.ySpeed < 0){
       player.ySpeed = 0;
   }
}

